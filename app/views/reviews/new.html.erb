<html>
<head>

</head>
<body>

<div data-role="page">

	<!--Header: Contains the navigation bar -->
    <div data-role="header">
      <div data-role="navbar">
        <ul>

          <li>
            <a href="/users/homepage" class="ui-btn" id = "home_icon"> 
              <i class="fa fa-home fa-inverse fa-lg"></i>
            </a>
          </li>
            <li>
              <a href="/professions/quiz" class="ui-btn" id = "interests_icon">
                <i class="fa fa-suitcase fa-inverse fa-lg"></i>
              </a>
            </li>
          <li>
            <a href="/programs/search" class="ui-btn" id = "search_icon">
              <i class="fa fa-search fa-inverse fa-lg"></i>
            </a>
          </li>

          <li>
            <a href="/users/logout" class="ui-btn" id = "logout_icon">
              <i class="fa fa-sign-out fa-inverse fa-lg"></i>
            </a>
          </li>

        </ul>
      </div>
    </div>

	<h1><center><%= @program.title %></center></h1>
	<center><%= image_tag("#{@program.photo_file_name}", alt: "Program", class: "program", class: "review_image")%></center>

	    
	<% @new_review.errors.full_messages.each do |msg| %>
		<h1><%= msg %></h1>
	<% end %> <!-- ends the errors -->
	<% if (session[:user_id] != nil) then %>
		<%= form_for(@new_review, :method => :post, :url => {:action => :create, :id => @new_review.id, :program_id => @program.id}) do |form| %>


		<div class = "review_comment">
			<%= form.text_area(:review, :placeholder => "My experience was...") %>
		</div>

		<div class = "review_post_button">
			<%= form.submit "Post review" %>
		</div>
		
		<% end %> <!--ends form-->
	<% else %>
		<center><h1><%= link_to("LOG IN TO REVIEW THIS PROGRAM", controller: "users", action: "login") %></h1></center>
	<% end %> <!--ends the if/else -->
	    

	</div>



	
	
	
	

</div>
</body>