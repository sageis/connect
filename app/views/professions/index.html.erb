<div data-role="page">
<div data-role="navbar">
    <ul>
      <li><a href="/users/homepage.html" class="ui-btn ui-icon-home ui-btn-icon-top ui-nodisc-icon" id = "home_icon"> </a></li>
      <li><a href="/professions/quiz" class="ui-btn ui-icon-heart ui-btn-icon-top ui-nodisc-icon" id = "interests_icon"> </a></li>
      <li><a href="/programs/search" class="ui-btn ui-icon-search ui-btn-icon-top ui-nodisc-icon" id = "search_icon"> </a></li>
      <li><a href="/users/logout" class="ui-btn ui-icon-back ui-btn-icon-top ui-nodisc-icon" id = "logout_icon"> </a></li>
    </ul>
  </div>


<% person = User.find_by_id(session[:user_id]) %>
  <% if (person == nil) then %>
    <center><h1>
      <%= link_to("Log in to view this page", controller: "users", action: "login") %>
    </h1></center>
  <% else %>

	<% if (@all_professions == nil) then %>
		<h1>Professions: </h1>
	<% else %>
		<h1> Professions: </h1>
		<% for profession in @all_professions %>
			<div> <%= profession.title %> </div>
			<div> <%= profession.description %> </div>
			<%= image_tag(profession.file_name, size: "200x150") %>
			<%= link_to("Add to My Professions", controller: "professions", action: "add", id: profession.id) %>
			<br/><br/><br/>
		<% end %>
	<% end %>
<% end %>
</div>

