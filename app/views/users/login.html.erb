<body>

<!-- Login Page -->
<div data-role="page">
  <div data-role="header" id = "top-header">
    <h1>connect</h1>
  </div>

  <div data-role="main" class="ui-content">
    <!-- <form method="post" action="demoform.asp"> -->
    <%= form_for(@user, :method => :post, :url => {:action => :homepage}) do |form| %>
      <div class="ui-field-contain">
        <div>
      <%= form.label(:login, "Username:")%>
      <%= form.text_field(:login) %>
    </div>
        <!-- <input type="text" name="username" id="username" placeholder = "username">  -->
        <br> 
        <div>
          <%= form.label(:password, "Password:")%>
      <%= form.password_field(:password) %> 
    </div>    
        <!-- <input type="password" name="password" id="password" placeholder="password"> -->
        <br>
        <br>
      </div>
      <!-- <a href="homepage.html" data-role="button" data-mini="true">login</a> -->
    <div>
      <%= form.submit "Log In" %>
    </div>
      <br>
      <div style="text-align: center">
        <a href="new_account.html" data-role="button" data-inline="true" data-mini="true">new account</a>
      </div>
    <% end %>
    <!-- </form> -->
  </div>
</div> 
