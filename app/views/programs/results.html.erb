<html>	
<head>

</head>
<body>

<div data-role="page">

	<%= render "layouts/nav" %>

	<% for program in @results %>
		<!--skip blank programs -->
		<% if (program.due_date == nil) then %>
				<% next %>
			<% end %>

		<div class="ui-grid-solo">
			<h2><center><strong><%= program.title %></strong></center></h2>
		</div>

		<div class="ui-grid-solo">
			<% for profession in program.professions %>
				<h1><center><%= profession.title %></center></h1>
			<% end %>
		</div>
    
		<center><%= image_tag(program.photo_file_name, class: "program_image", id: "img-alone") %><center>

<table>
           <tr>
           	<td>
           		<center>
           		<i class="fa fa-usd fa-lg"></i>
           		<br>
           		<% if (program.price == 0) %>
					<p class = "price-txt">free</p>
				<% else %>
					<p class = "price-txt"><%= program.price %></p>
				<% end %>
				</center>
           	</td>
           	<td>
           		<center>
           			<i class="fa fa-bed fa-lg"></i>
           			<br>
           			<% if (program.housed == true) %>
						<p class = "housed-txt">housed</p>
					<% else %>
						<p class = "housed-txt">unhoused</p>
					<% end %>
           		</center>
           	</td>
           	<td>
           		<center>
	           		<i class="fa fa-money fa-lg"></i>
	           		<br>
	       			<% if (program.paid == true) %>
						<p class = "paid-txt">paid</p>
					<% else %>
						<p class = "paid-txt">unpaid</p>
					<% end %>  
				</center>       		
           	</td>
           </tr>


           <tr>
           	<td>
           		<center>
	           		<i class="fa fa-globe fa-lg"></i>
	           		<br>
	           		<p class = "region-txt"><%= program.region %></p>
	           	</center>
           	</td>
           	<td>
           		<center>
	           		<i class="fa fa-check fa-lg"></i>
	           		<br>
	       			<% if (program.applied == true) %>
						<p class = "paid-txt">app done</p>
					<% else %>
						<p class = "paid-txt">app incomplete</p>
					<% end %> 
	           	</center>

           	</td>
           	<td>
           		<center>
           			<i class="fa fa-calendar fa-lg"></i>
           			<br>
           			<p class = "duedate-txt">01-06-16</p>
           		</center>
           	</td>
           </tr>
       </table>

       
		    
		<div class = "program_description">
			<p><%= program.description %></p>
		</div>

		<% if (program.reviews.size != 0) %>  
			<h2 id = "reviews-tag">reviews</h2>
			<% for review in program.reviews %>
				<div class="row">
					<div class = "review-content">
						<p class = "review-review">"<%= review.review %>"</p>
						<p class = "review-name"><%= (User.find_by_id(review.user_id)).first_name %>
						<%= (User.find_by_id(review.user_id)).last_name %></p>
						<p class = "timestamp"><%= review.date_time.getlocal %></p>
					</div>
				</div>
			<% end %>
		<%end%>

		<%= link_to "add review", {controller: "reviews", action: "new", id: program.id}, :class => "ui-btn", :id => "add_review"%>

		<div class = "program-link-txt" id = "weblink">
       	<a href = "<%= program.website_link %>" id = "webtxt">apply to program</a>
    </div>
	<%= link_to "add to my programs", {controller: "programs", action: "save", id: program.id}, :class => "ui-btn", :id => "add_program" %>


	<% end %>
</div>
</body>