<html>	
<head>

</head>
<body>

<div data-role="page">

	<!--Header: Contains the navigation bar -->
    <div data-role="header">
      <div data-role="navbar">
        <ul>
          <li><a href="/users/homepage" class="ui-btn ui-icon-home ui-nodisc-icon ui-btn-icon-notext" id = "home_icon"> </a></li>
          <li><a href="/professions/quiz" class="ui-btn ui-icon-heart ui-nodisc-icon ui-btn-icon-notext" id = "interests_icon"> </a></li>
          <li><a href="/programs/search" class="ui-btn ui-icon-search ui-nodisc-icon ui-btn-icon-notext" id = "search_icon"> </a></li>
          <li><a href="/users/logout" class="ui-btn ui-icon-back ui-nodisc-icon ui-btn-icon-notext" id = "logout_icon"> </a></li>
        </ul>
      </div>
    </div>

	<% for program in @all_programs %>
	<% if (program.title == nil) then %>
			<% next %>
		<% end %>

	<div class="ui-grid-solo">
		<h1><center><%= program.title %></center></h1>
	</div>


	    
	<center><%= image_tag(program.photo_file_name, class: "program_image") %><center>
	    
	<div class = "program_description">
		<p><%= program.description %></p>
	</div>



	<%= link_to "add review", {controller: "reviews", action: "new", id: program.id}, :class => "ui-btn", :id => "add_review"%>
	<%= link_to "add to my programs", {controller: "programs", action: "save", id: program.id}, :class => "ui-btn", :id => "add_program" %>
	    
	

		
		<table>
			<% for review in program.reviews %>
				<tr>
					<td>
						<div class="row">
							<%= review.review %>
							<div class="review_date">
							<%= review.date_time.getlocal %>
							</div>
							<br/>
						</div>
						<br/>
					</td>
				</tr>
			<% end %>
		</table>

	<% end %>
</div>
</body>